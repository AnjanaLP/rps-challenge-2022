<h1>Hello, <%= @name %>!</h1>

<% if @weapon.nil? %>

  <h3>Here are you weapon choices, please select one:</h3>

  <form action="/play" method="post">
    <input type="submit" name="weapon" value="Rock">
    <input type="submit" name="weapon" value="Paper">
    <input type="submit" name="weapon" value="Scissors">
  </form>

<% else %>

  <h3>You chose <%= @weapon %>!</h3>

<% end %>
